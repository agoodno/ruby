<div class="depot-form">
  <%= error_messages_for 'user' %>
  
  <fieldset>
    <legend>Please Log In</legend>
    <% form_tag do %>
      <p>
        <label for="name">Name:</label>
        <%= text_field_tag :name, params[:name] %>
      </p>
      <p>
        <label for="password">Password:</label>
        <%= text_field_tag :password, params[:password] %>
      </p>
      <%= submit_tag "Login" %>
    <% end %>
  </fieldset>
</div>